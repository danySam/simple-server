<div class="row">
  <div class="col-lg-12">
    <div class="card card-responsive">
      <div>
        <div>
          <div class="d-flex align-baseline jc-between">
            <h3>
              BP controlled
            </h3>
            <p class="c-grey-dark">
              Last updated: <%= @last_updated_at %>
            </p>
          </div>
          <p class="c-grey-dark">
            <strong>What to look for:</strong> High percentages are good, and 70% or higher is ideal
          </p>
        </div>
        <div class="d-flex fw-wrap">
          <%= render "shared/size_and_zone_filters" %>
        </div>
      </div>
      <% %w(large medium small community).each do |size| %>
        <% next if @facilities_by_size[size].blank? %>
        <p class="mt-20px mb-0px fw-bold">
          <%= size.capitalize %> facilities
        </p>
        <table class="mt-3 mt-lg-4 table table-compact table-respondive-md table-hover analytics-table">
          <colgroup>
            <col>
            <col>
            <col>
            <col>
            <col>
            <col>
            <col>
            <col class="mobile">
          </colgroup>
          <thead>
          </thead>
        </table>
      <% end %>
      <div class="">
        <div class="mb-2">
          <p class="mb-8px fs-14px c-grey-dark c-print-black">
            <strong>Numerator:</strong> Hypertensive patients with BP &lt;140/90 at their most recent visit in the last 3 months
          </p>
          <p class="mb-0px fs-14px c-grey-dark c-print-black">
            <strong>Denominator:</strong> Hypertensive patients in registered before the last 3 months.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
